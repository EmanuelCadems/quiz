<label for="pregunta">Pregunta</label>
<input type="text" name="quiz[pregunta]" value="<%= quiz.pregunta%>">
<label for="respuesta">Respuesta</label>
<input type="text" name="quiz[respuesta]" value="<%= quiz.respuesta%>">
<select name="quiz[tema]">
  <% if (quiz.tema === 'otro') { %>
    <option value="otro" selected >Otro</option>
  <% } else { %>
    <option value="otro">Otro</option>
  <% } %>
  <% if (quiz.tema === 'humanidades') { %>
    <option value="humanidades" selected >Humanidades</option>
  <% } else { %>
    <option value="humanidades">Humanidades</option>
  <% } %>
  <% if (quiz.tema === 'ocio') { %>
    <option value="ocio" selected >Ocio</option>
  <% } else { %>
    <option value="ocio">Ocio</option>
  <% } %>
  <% if (quiz.tema === 'ciencia') { %>
    <option value="ciencia" selected >Ciencia</option>
  <% } else { %>
    <option value="ciencia">Ciencia</option>
  <% } %>
  <% if (quiz.tema === 'tecnologia') { %>
    <option value="tecnologia" selected >Tecnologia</option>
  <% } else { %>
    <option value="tecnologia">Tecnologia</option>
  <% } %>
</select>
<input type="submit" value="Guardar">
